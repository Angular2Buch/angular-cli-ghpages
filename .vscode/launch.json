    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Standalone Program",
            //"cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}/dist/angular-cli-ghpages",
            "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
            ],
            "args": [
                //"--no-silent",
                //"--dry-run",
                "--dir=angular-testdrive",
                "--cname=angular-cli-ghpages.angular.schule"
            ],
            "stopOnEntry": true,
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
        }
    ]
}
